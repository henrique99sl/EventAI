# Banco de dados - Postgres local
DATABASE_URL=postgresql://eventos_user:eventos_pass@localhost:5432/eventos_db

# Se não tens Postgres local e só queres testar, podes usar SQLite:
# DATABASE_URL=sqlite:///dev.db

# Redis local (só necessário se usares mesmo Redis no desenvolvimento)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=eventos_redis_pass

# Ambiente Flask
FLASK_ENV=development

# Chave secreta Flask
SECRET_KEY=sua_chave_muito_secreta

# Chave secreta para JWT
JWT_SECRET_KEY=sua_jwt_ultra_secreta

# CORS para o frontend local
CORS_ORIGINS=http://localhost:3000

# Sentry (opcional, pode estar vazio)
SENTRY_DSN=